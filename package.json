{
  "name": "all-you-need-is-copy",
  "version": "1.0.0",
  "description": "Copy the site URL in any format.",
  "main": "index.js",
  "author": "sushidesu",
  "license": "MIT",
  "scripts": {
    "build": "concurrently \"yarn:build:*\"",
    "build:check": "tsc --noEmit",
    "build:content": "esbuild --bundle --target=esnext --outdir=build src/content.ts",
    "build:background": "esbuild --bundle --target=esnext --outdir=build src/background.ts",
    "build:options": "cp src/options.html build/options.html && esbuild --bundle --target=esnext --platform=browser --outdir=build src/options.tsx",
    "build:manifest": "node src/scripts/build-manifest.js",
    "dev": "concurrently \"yarn build:content --watch\" \"yarn build:background --watch\" \"yarn build:options --watch\"",
    "fmt": "concurrently \"yarn:fmt:*\"",
    "fmt:format": "prettier --loglevel error --write src",
    "fmt:lint": "eslint --fix --max-warnings=0 src/**.ts"
  },
  "devDependencies": {
    "@tsconfig/strictest": "^1.0.2",
    "@types/chrome": "^0.0.206",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "concurrently": "^7.6.0",
    "esbuild": "^0.16.12",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "prettier": "^2.8.1",
    "typescript": "^4.9.4",
    "vitest": "^0.26.3"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
