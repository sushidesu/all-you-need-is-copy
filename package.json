{
  "name": "all-you-need-is-copy",
  "version": "1.0.0",
  "description": "Copy the site URL in any format.",
  "main": "index.js",
  "author": "sushidesu",
  "license": "MIT",
  "scripts": {
    "build": "concurrently \"yarn:build:*\"",
    "build:check": "tsc --noEmit",
    "build:content": "esbuild --bundle --target=esnext --outdir=build src/content.ts",
    "build:background": "esbuild --bundle --target=esnext --outdir=build src/background.ts",
    "build:options": "esbuild --bundle --target=esnext --platform=browser --outdir=build src/options.tsx",
    "build:options:html": "cp src/options.html build/options.html",
    "watch:build:options:html": "chokidar \"src/options.html\" -c \"cp src/options.html build/options.html\"",
    "build:options:css": "cp src/options.css build/options.css",
    "watch:build:options:css": "chokidar \"src/options.css\" -c \"cp src/options.css build/options.css\"",
    "build:manifest": "node src/scripts/build-manifest.js",
    "dev": "concurrently \"yarn build:content --watch\" \"yarn build:background --watch\" \"yarn build:options --watch\" \"yarn watch:build:options:html\" \"yarn watch:build:options:css\"",
    "fmt": "concurrently \"yarn:fmt:*\"",
    "fmt:format": "prettier --loglevel error --write src",
    "fmt:lint": "eslint --fix --max-warnings=0 src/**/*.{ts,tsx}",
    "test": "vitest",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "devDependencies": {
    "@babel/core": "^7.20.7",
    "@storybook/addon-actions": "^6.5.15",
    "@storybook/addon-essentials": "^6.5.15",
    "@storybook/addon-interactions": "^6.5.15",
    "@storybook/addon-links": "^6.5.15",
    "@storybook/builder-webpack4": "^6.5.15",
    "@storybook/manager-webpack4": "^6.5.15",
    "@storybook/react": "^6.5.15",
    "@storybook/testing-library": "^0.0.13",
    "@tsconfig/strictest": "^1.0.2",
    "@types/chrome": "^0.0.206",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "babel-loader": "^8.3.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^7.6.0",
    "esbuild": "^0.16.12",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-storybook": "^0.6.8",
    "eslint-plugin-unused-imports": "^2.0.0",
    "prettier": "^2.8.1",
    "typescript": "^4.9.4",
    "vitest": "^0.26.3"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.7.1",
    "swr": "^2.0.0",
    "ulid": "^2.3.0"
  }
}
